<%= render "shared/header" %>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>ログイン</h2>
      <h5>Log in</h5>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_session_path, local: true do |f|%>
        <div class='field'>
          <label class='field-label'>Eメール</label>
          <div class='field-input'>
            <%= f.text_field :email, class:"input-name", id:"email" %>
          </div>
        </div>
        <div class='field'>
          <label class='field-label'>パスワード</label>
          <div class='field-input'>
            <%= f.password_field :password, class:"input-name", id:"password" %>
            <%= render 'shared/error_messages', model: f.object %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "ログインへ", class: 'btn' %><br>
          <%= link_to '新規登録へ', new_user_registration_path, class: 'ppp' %>
        </div>
        <% end %>
      </div>
  </div>
</div>

