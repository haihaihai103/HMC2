<%= render "shared/header" %>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
      <h2>New User Registration</h2>
      <h5>新規アカウントの登録</h5>
       <%= render 'shared/error_messages', model: f.object %>
    </div>
    <div class='account-page__inner--right user-form'>
        <div class='field'>
          <label class='field-label'>お名前(全角)</label>
          <div class='field-input'>
            <%= f.text_field :first_name, class:"input-name", id:"last-name", placeholder:"例) 愛知" %>
            <%= f.text_field :last_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
          </div>
        </div>
         <div class='field'>
          <label class='field-label'>お名前カナ(全角)</label>
          <div class='field-input'>
            <%= f.text_field :first_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) アイチ" %>
            <%= f.text_field :last_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
          </div>
        </div>
        <div class='field'>
           <label class='field-label'>所属</label>
          <div class='field-input'>
            <%= f.collection_select(:belong_id, Belong.all, :id, :name, {}, {class:"input_name", id:"belong_id"}) %>
          </div>
        </div>
        <div class='field'>
          <label class='field-label'>Eメール</label>
          <div class='field-input'>
            <%= f.text_field :email, class:"input-name", id:"email" %>
          </div>
        </div>
        <div class='field'>
          <label class='field-label'>生年月日</label>
          <div class='field-input'>
           <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'select-birth',
                    id:"input-name",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>
        <div class='field'>
          <label class='field-label'>パスワード</label>
            <i>(英数字6文字以上)</i>
          <div class='field-input'>
            <%= f.password_field :password, class:"input-name", id:"password" %>
          </div>
        </div>
        <div class='field'>
          <label class='field-label'>パスワード</label>
            <i>(もう一度)</i>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, class:"input-name", id:"password" %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "登録へ", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
