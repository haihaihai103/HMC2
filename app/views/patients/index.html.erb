<%= render "shared/header" %>

<!-- グラフ -->
<div class="alert alert-primary" role="alert">
  <%= Date.today %>  愛知県の感染状況
</div>
<div class="main">
  <label class="text-user">新規感染者数推移（総人数：<%= @patients.count %>）</label>
  <div class="graph">
    <%= line_chart @patients_count, download: true, colors: ['#FF4F02'] %>
  </div>
</div>
<div class="main">
  <label class="text-user">感染者年代別割合（総人数：<%= @patients.count %>)</label>
  <div class="graph">
   <%= pie_chart Patient.group(:age).count, donut: true, suffix: "%" %>
  </div>
</div>
<div class="main">
  <label class="text-user">感染者男女割合（総人数：<%= @patients.count %>)</label>
  <div class="graph">
    <%= pie_chart Patient.group(:gender).count, colors: ["gray","pink","blue"] %>
  </div>
</div>